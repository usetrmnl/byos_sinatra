<li class="device">
  <form action="/devices" method="post" class="pico form">
    <fieldset role="group">
      <input name="device[name]" value="<%= device.name %>" placeholder="Name" autocomplete="name">
      <input name="device[friendly_id]" value="<%= device.friendly_id %>" disabled>

      <input name="device[mac_address]"
             value="<%= device.mac_address %>"
             placeholder="MAC"
             autocomplete="mac">

      <input name="device[refresh_interval]"
             value="<%= device.refresh_interval %>"
             placeholder="Refresh Rate"
             autocomplete="refresh_rate">

      <input type="submit"
             value="Save"
             hx-put="/devices/<%= device.id %>"
             hx-trigger="click"
             hx-target="closest .device"
             hx-swap="outerHTML swap:0s">

      <input type="button"
             value="Cancel"
             hx-get="/devices/<%= device.id %>"
             hx-trigger="click"
             hx-target="closest .device"
             hx-swap="outerHTML swap:0s">
    </fieldset>
  </form>
</li>
