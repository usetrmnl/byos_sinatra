<li class="device" hx-ext="remove">
  <form action="/devices" method="post" class="pico form">
    <fieldset role="group">
      <input name="device[name]" placeholder="Name" autocomplete="name">
      <input name="device[mac_address]" placeholder="MAC" autocomplete="mac">

      <input type="submit"
             value="Save"
             hx-post="/devices"
             hx-trigger="click"
             hx-target="closest .device"
             hx-swap="outerHTML swap:0s">

      <input type="button" value="Cancel" data-remove="true">
    </fieldset>
  </form>
</li>
